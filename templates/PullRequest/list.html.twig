{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><img src="{{ asset('build/images/repo.88dce2d6.svg') }}"/> Repositories</a></li>
                <li class="breadcrumb-item"><img src="{{ asset('build/images/git-pull-request.163b30df.svg') }}"/> Pull Requests for {{ repository.fullName }}</li>
            </ol>
        </nav>

        <table class="table table-sm">
            <thead class="thead-light">
            <tr>
                <th class="col-md-1">Id</th>
                <th class="col-md-2">Updated At</th>
                <th class="col-md-2">Author</th>
                <th class="col-md-7">Title</th>
            </tr>
            </thead>
            <tbody>
            {% for pull_request in pull_requests %}
                <tr>
                    <td>
                        <a href="{{ pull_request.htmlUrl }}">{{ pull_request.id }}</a>
                    </td>
                    <td>{{ pull_request.updatedAt.date|date('Y-m-d') }}</td>
                    <td>{{ pull_request.userLogin }}</td>
                    <td>{{ pull_request.title }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
